pipeline {
    agent {
        node {
            label 'node'
        }
    }
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/EdgarVERMECH/gilded.git'
            }
        }
        stage('Build') {
            steps {
                sh 'npm install'
                sh 'npm run build'
            }
        }
        stage('Test') {
            steps {
                sh 'npm test'
            }
        }
        stage('Packaging') {
            steps {
                sh 'npm pack'
            }
        }
        
    }
}
